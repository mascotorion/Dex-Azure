<% @title="Digital Experiences" %>
<%= stylesheet_link_tag "home" %>
<%= render "site/navbar2" %>
<section class="slider">
  <div id="mycarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ol class="carousel-indicators">
      <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
      <li data-target="#mycarousel" data-slide-to="1"></li>
      <li data-target="#mycarousel" data-slide-to="2"></li>
      <li data-target="#mycarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="carousel-caption align-middle">
          <h2>Digital Transformation of Online Business</h2>
          <p>Creating digital experiences worldwide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <div class="carousel-caption">
          <h2>Digital Transformation of Travel</h2>
          <p>Creating digital experiences worldwide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <div class="carousel-caption">
          <h2>Digital Transformation of Health</h2>
          <p>Creating digital experiences worldwide.</p>
        </div>
      </div>
      <div class="carousel-item">
        <div class="carousel-caption">
          <h2>Digital Transformation of Real Estate</h2>
          <p>Creating digital experiences worldwide.</p>
        </div>
      </div>
    </div>
    <!--<a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>-->
  </div>
</section>
<section class="d-flex justify-content-center pt-lg-5 homepage-hero bg-green-80">
  <div class="container">
    <div class="row d-flex h-100 justify-content-center align-items-center">
      <div class="col-md-6 mb-4">
        <h1 class="font-weight-bold text-ima-dark"><span class="h3">Build your own brand,</span><br>
          Build your own online business.</h1>
        <form class="" novalidate="novalidate" action="<%= new_user_registration_path %>" accept-charset="UTF-8" method="get" >
          <div class="marketing-input-button-pair__field-wrapper">
            <label for="inputEmail" class="sr-only" for="SignupEmail">Email address</label>
            <input placeholder="Enter your email address" id="SignupEmail" class="marketing-input"  type="email" name="email" required="" />
            <button class="bg-green-cta marketing-button marketing-form__button marketing-input-button-pair__button" aria-haspopup="dialog" type="submit">Start free trial</button>
          </div>
        </form>
        <small class="text-muted">Try Digital Experiences (DEX) free for 14 days, no credit card&nbsp;required. By entering your email, you agree to receive marketing emails&nbsp;from&nbsp;Digital Experiences (DEX).</small>
      </div>
      <div class="col-md-6 col-xl-5 mb-4">
        <%= image_tag(root_path + "images/admin-new.png", :class => "img-fluid", :alt => "digital experiences platform") -%>
      </div>
      <!--Grid column-->
    </div>
    <!--Grid row-->
  </div>
</section>
<%= render "site/page_cta" %>
<%= render "site/footer" %>
<script>
  $( document ).ready(function(){
      $('#mycarousel').carousel();
  });
</script>
